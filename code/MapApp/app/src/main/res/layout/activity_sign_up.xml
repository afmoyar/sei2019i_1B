<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#162055"
    tools:context="presentation.Activities.SignUpActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="29dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:layout_gravity="center"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="30sp"
            android:fontFamily="cursive"
            android:gravity="center"
            android:text="Create a new User"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="#FFEB3B"
            android:textSize="36sp" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:fontFamily="cursive"
            android:text="Enter you ID:"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="#8BC34A"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/editTSignid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:layout_marginBottom="20sp"
            android:ems="10"
            android:hint="User Id"
            android:inputType="textPersonName"
            android:textColor="#03A9F4"
            android:textColorHint="#F5EFF3" />

        <TextView
            android:id="@+id/textView8"
            style="@android:style/Widget.DeviceDefault.TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:fontFamily="cursive"
            android:text="Enter your name:"
            android:textColor="#FF9800"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/editTSignname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:layout_marginBottom="20sp"
            android:ems="10"
            android:hint="User name"
            android:inputType="textPersonName"
            android:textColor="#2196F3"
            android:textColorHint="#FDFBFD" />

        <TextView
            android:id="@+id/textView6"
            style="@android:style/Widget.DeviceDefault.TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:fontFamily="cursive"
            android:text="Enter your password:"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="#00BCD4"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/editTSignpass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:layout_marginBottom="20sp"
            android:ems="10"
            android:hint="User password"
            android:inputType="textPersonName"
            android:textColor="#2196F3"
            android:textColorHint="#F5F2F7" />

        <Button
            android:id="@+id/btnsighupF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="15sp"
            android:layout_marginRight="20sp"
            android:background="#E91E63"
            android:fontFamily="cursive"
            android:text="Create"
            android:textColor="#FCFBFB"
            android:textSize="30sp" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
